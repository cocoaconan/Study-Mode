{
    "manifest_version": 2,
    "name": "Study Mode",
    "version": "1.0.0",
    "description": "Online activities",
    "offline_enable": true,
    "permissions": ["idle", "storage","unlimitedStorage", "tabs"],
    "update_url": "https://clients2.google.com/service/update2/crx",

    "browser_action": {
        "default_title": "Study Mode",
        "default_popup": "popup.html"
    },

    "icons":{
        "16": "icon/16.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },

    "background":{
        
    }
}